<% title t(".title") %>

<% if @text %>
    <h1><%= @text.project.name %></h1>

    <% if @text.context.present? %>
        <h3>Context</h3>
        <blockquote>
          <p><%= @text.context %></p>
        </blockquote>
    <% end %>

    <h3>Text</h3>
    <blockquote>
      <p><%= @text.body %></p>
    </blockquote>

    <%= simple_form_for(@text, url: project_text_path(@project, @text), html: { id: 'label_form'}) do |f| %>
      <%= f.input :classification,
                  collection: @text.project_labels,
                  classification: false,
                  label_method: :name,
                  value_method: :name,
                  include_blank: false,
                  input_html: { onchange: "this.form.submit();", autofocus: true }
      %>
    <% end %>
<% else %>
    <div>
      <%= t('.all_classified') %>
    </div>
<% end %>